@using MvcStok.Models.Entity
@model List<TBL_MUSTERİLER>
@{
    ViewBag.Title = "Musteriler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Musteriler", "Musteri", FormMethod.Get))
{
    <p>
        <b>Arancak Müşteri Adı:</b> @Html.TextBox("p")
        <b><input type="submit" value="Ara" /></b>
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        @*<th>Sil</th>*@
        <th>Güncelle</th>
        <th>Sil</th>


    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <th>@mus.MUSTERİID</th>
                <td>@mus.MUSTERİAD</td>
                <td>@mus.MUSTERİSOYAD</td>
                @*<th><a href="/MUSTERI/SIL/@mus.MUSTERİID" class="btn btn-danger">SİL</a></th>*@
                <th><a href="/MUSTERI/MusteriGetir/@mus.MUSTERİID" class="btn btn-success">GÜNCELLE</a></th>
                <td>@Html.ActionLink("SİL", "SIL", new { id = mus.MUSTERİID }, new { @class = "btn btn-danger", onclick = "return-confirm('Gerçekten Silmek İstiyor musunuz ?')" })</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
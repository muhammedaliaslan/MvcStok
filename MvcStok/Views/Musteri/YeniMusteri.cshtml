@model MvcStok.Models.Entity.TBL_MUSTERİLER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MUSTERİAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERİAD, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        @Html.TextBoxFor(m => m.MUSTERİSOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERİSOYAD, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Müşteri Ekleme İşlemi Yapıldı...!');
        });
    </script>
</form>

